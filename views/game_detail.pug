extends layout

block content
  h1 Title: #{game.title}
  
  p #[strong Description:] #{game.description}
  p #[strong Category:]&nbsp;
    each val, index in game.category
      a(href=val.url) #{val.name}
      if index < game.category.length - 1
        |,       
          
        hr
        p
          a(href=game.url+'/delete') Delete Game
      
        p
          a(href=game.url+'/update') Update Game
